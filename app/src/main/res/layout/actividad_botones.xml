<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActividadBotones" tools:layout_editor_absoluteY="81dp">

    <Button
            android:text="@string/rojo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bRojo"
            android:background="@android:color/transparent"
            android:layout_marginTop="116dp"
            app:layout_constraintEnd_toStartOf="@+id/bVerde" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/bAmarillo" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginEnd="20dp"/>
    <Button
            android:text="@string/verde"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bVerde"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/bStart" app:layout_constraintStart_toEndOf="@+id/bRojo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/bAzul" android:layout_marginEnd="22dp"
    />
    <Button
            android:text="@string/amarillo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bAmarillo"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/bRojo" app:layout_constraintEnd_toStartOf="@+id/bAzul"
            android:layout_marginBottom="26dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="20dp"
    />
    <Button
            android:text="@string/azul"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bAzul"

            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/bVerde" app:layout_constraintStart_toEndOf="@+id/bAmarillo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="22dp"
    />
    <Button
            android:text="@string/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bStart" android:layout_marginTop="33dp"
            android:layout_marginBottom="36dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bVerde" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>